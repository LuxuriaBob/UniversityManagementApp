<Window x:Class="UniversityManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityManagementApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" Margin="340,90,0,0" VerticalAlignment="Top"/>
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="340,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userName_textBox" Margin="0,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="427,197,0,0" VerticalAlignment="Top" Click="loginButton_Click"/>
        <PasswordBox x:Name="passwordBox" PasswordChar="*" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
